<odoo>

<record id="account_move_import_form" model="ir.ui.view">
    <field name="name">account.move.import.form</field>
    <field name="model">account.move.import</field>
    <field name="arch" type="xml">
        <form string="Import Account Move">
            <group name="main">
                <field name="company_id" invisible="1" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="file_to_import" filename="filename" />
                <field name="filename" invisible="1" />
                <field name="file_format" />
                <field name="post_move" />
                <field
                        name="file_encoding"
                        attrs="{'invisible': [('file_format', 'not in', ('fec_txt', 'quadra', 'genericcsv'))], 'required': [('file_format', 'in', ('fec_txt', 'quadra', 'genericcsv'))]}"
                    />
                <field
                        name="delimiter"
                        attrs="{'invisible': [('file_format', '!=', 'genericcsv')], 'required': [('file_format', '=', 'genericcsv')]}"
                    />
                <!-- In v16, I also need to have a company_id field without group, to make the domain on force_journal_id work -->
                <field
                        name="date_format"
                        attrs="{'invisible': [('file_format', '!=', 'genericcsv')]}"
                    />
                <field
                        name="force_journal_id"
                        attrs="{'required': [('force_journal_required', '=', True)]}"
                    />
                <field
                        name="force_move_date"
                        attrs="{'required': [('force_move_date_required', '=', True)]}"
                    />
                <field name="force_move_ref" />
                <field name="force_journal_required" invisible="1" />
                <field name="force_move_date_required" invisible="1" />
                <field name="advanced_options" invisible="1" />
            </group>
            <group name="button_advanced_options">
                <button
                        name="button_show_advanced_options"
                        type="object"
                        attrs="{'invisible': [('advanced_options', '=', True)]}"
                        string="Show Advanced Options"
                        colspan="2"
                    />
                <button
                        name="button_hide_advanced_options"
                        attrs="{'invisible': [('advanced_options', '=', False)]}"
                        type="object"
                        string="Hide Advanced Options"
                        colspan="2"
                    />
            </group>
            <group
                    name="advanced_options"
                    attrs="{'invisible': [('advanced_options', '!=', True)]}"
                >
                <field
                        name="file_with_header"
                        attrs="{'invisible': [('file_format', 'not in', ('genericcsv', 'genericxlsx'))]}"
                    />
                <field name="split_move_method" widget="radio" />
                <field name="keep_odoo_move_name" />
                <field
                        name="date_by_move_line"
                        attrs="{'invisible': [('split_move_method', '!=', 'balanced')]}"
                    />
                <field name="skip_null_lines" />
                <field name="force_move_line_name" />
            </group>
            <div
                    name="info-csv"
                    attrs="{'invisible': [('file_format', '!=', 'genericcsv')]}"
                >
                <h2>Information about the Generic CSV format</h2>
                <ul>
                    <li><em>Encoding</em>: configurable (UTF-8 by default)</li>
                    <li><em>Field separator</em>: configurable</li>
                    <li><em>Text separator</em>: &quot; (quote)</li>
                    <li><em>Decimal separator</em>: . (dot) or , (coma)</li>
                    <li><em>Columns</em>:
                        <ol><li>Date (DD/MM/YYYY or configurable)</li>
                        <li>Journal code</li>
                        <li>Account code</li>
                        <li>Partner internal reference</li>
                        <li>Analytic (analytic account reference written as <code
                                    >CODE1</code>, or analytic distribution written as <code
                                    >CODE1:40|CODE2:60</code>)</li>
                        <li>Label</li>
                        <li>Debit</li>
                        <li>Credit</li>
                        <li>Ref (used as Journal Entry Ref)</li>
                        <li>Reconcile ref (used for reconciliation after import)</li>
                        </ol></li>
                  </ul>
              </div>
            <div
                    name="info-xlsx"
                    attrs="{'invisible': [('file_format', '!=', 'genericxlsx')]}"
                >
                <h3>Columns of the Generic XLSX/XLS/ODS format</h3>
                    <p>
                    A. Date (must be a date field in the spreadsheet)<br />
                    B. Journal Code<br />
                    C. Account Code<br />
                    D. Partner Reference<br />
                    E. Analytic (analytic account reference written as <code
                        >CODE1</code>, or analytic distribution written as <code
                        >CODE1:40|CODE2:60</code>)<br />
                    F. Label<br />
                    G. Debit<br />
                    H. Credit<br />
                    I. Ref (used as Journal Entry Ref)<br />
                    J. Reconcile Ref (used for reconciliation after import)<br />
                </p>
            </div>

            <footer>
                <button
                        name="run_import"
                        type="object"
                        string="Import"
                        class="btn-primary"
                    />
                <button special="cancel" string="Cancel" />
            </footer>
        </form>
    </field>
</record>

<record id="account_move_import_action" model="ir.actions.act_window">
    <field name="name">Import Journal Entries</field>
    <field name="res_model">account.move.import</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

<menuitem
        id="account_move_import_menu"
        parent="account.menu_finance_entries_actions"
        action="account_move_import_action"
        sequence="150"
    />

</odoo>
